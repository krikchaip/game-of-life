{
  "compilerOptions": {
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "allowJs": false,
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@lib/*": ["./lib/*"],
      "@test/*": ["./test/*"],
      "~/*": ["./src/*"]
    }
  },
  "include": ["lib", "test", "src", "typings"]
}
