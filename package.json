{
  "name": "game-of-life",
  "version": "0.0.1",
  "description": "",
  "repository": "git@github.com:krikchaip/game-of-life.git",
  "author": "krikchaip <krikchai.p@gmail.com>",
  "license": "MIT",
  "scripts": {
    "prestart": "rm -rf .cache",
    "prebuild": "rm -rf dist",
    "start": "parcel public/index.html -p 3000",
    "build": "parcel build public/index.html --experimental-scope-hoisting",
    "format": "prettier --ignore-path .gitignore --write \"{lib,src,test}/**/*.{ts,tsx}\"",
    "validate:format": "prettier --ignore-path .gitignore --check \"{lib,src,test}/**/*.{ts,tsx}\"",
    "validate:lint": "eslint --ignore-path .gitignore --ext .ts,.tsx .",
    "validate:types": "tsc",
    "validate": "yarn validate:format && yarn validate:lint && yarn validate:types"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn validate && yarn build"
    }
  },
  "lint-staged": {
    "{lib,src,test}/**/*.{ts,tsx}": [
      "prettier --write",
      "eslint",
      "git add --update"
    ]
  },
  "dependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.0",
    "@babel/preset-react": "^7.9.1",
    "@babel/preset-typescript": "^7.9.0",
    "@types/react": "^16.9.25",
    "@types/react-dom": "^16.9.5",
    "@typescript-eslint/eslint-plugin": "^2.24.0",
    "@typescript-eslint/parser": "^2.24.0",
    "babel-plugin-module-resolver": "^4.0.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-typescript": "^7.0.0-alpha.19",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-react": "^7.19.0",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.8",
    "parcel-bundler": "^1.12.4",
    "prettier": "^2.0.1",
    "typescript": "^3.8.3"
  }
}
